@model FishingCapstone.Models.Species

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

<h1>Calendar by Species</h1>

<div>
    <h4>Species</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpeciesName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpeciesName)
        </dd>
    </dl>
</div>
<div>
    <table>
        <tr>
            <td>Destination</td>
            <td>January</td>
            <td>February</td>
            <td>March</td>
            <td>April</td>
            <td>May</td>
            <td>June</td>
            <td>July</td>
            <td>August</td>
            <td>September</td>
            <td>October</td>
            <td>November</td>
            <td>December</td>
        </tr>
        @foreach (var item in Model.Calendar.CalendarBySpeciesRows)
        {
            <tr>
                <td>
                    <p>@item.Destination.DestinationName</p>
                </td>
                @for (int i = 0; i < 12; i++)
                {
                    if (@item.MonthlyRatings[i] == "Best")
                    {
                        <td>
                            <p><b>@item.MonthlyRatings[i]</b></p>
                        </td>
                    }
                    else
                    {
                        <td>
                            <p>@item.MonthlyRatings[i]</p>
                        </td>
                    }
                }
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SpeciesId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
