@model FishingCapstone.Models.Trip

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

    <h1>@Html.DisplayFor(model => model.TripName) Album</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Explorer.FirstName) @Html.DisplayFor(model => model.Explorer.LastName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination.DestinationName)
        </dd>
        <dt class = "col-sm-2">
            Map View of Trip:
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Trips" asp-action="PhotoMap" asp-route-id="@Model.TripId">@Html.DisplayFor(model => model.TripName)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripGuideService)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripGuideService)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Month.MonthName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripEnd)
        </dd>
    </dl>
</div>
<table>
    <tr>
        <td><h3>Photos From Your Trip</h3></td>
    </tr>
    @foreach (var item in Model.TripPhotos)
    {
        <tr>
            <td><h5>@item.PhotoCaption</h5></td>
        </tr>
        <tr>
            <td><a asp-controller="Photos" asp-action="Details" asp-route-id="@item.PhotosId"><img src="~/images/@item.PhotoFile" alt="@item.PhotoCaption" width="400"></a></td>
        </tr>
    }


</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TripId">Edit</a> |
    <a asp-action="Index">Back to Trips List</a>
</div>
