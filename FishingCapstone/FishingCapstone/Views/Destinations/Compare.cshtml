@model FishingCapstone.Models.Destination

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

    <h1>Destination Comparison</h1>

<div>
    <h4><p>Comparing @Model.DestinationName to @Model.DestinationComparision.Destination2.DestinationName in @Model.DestinationComparision.MonthToCompare.MonthName</p></h4>
</div>


<div>
    <table>
        <tr>
            <td><p></p></td>
            <td colspan="2"><p>Click Destination to Select Trip</p></td>
        </tr>
        <tr>
            <td><p>Species</p></td>
            <td><p><a href="../Trips/Create/?DestinationId=@Model.DestinationId&MonthId=@Model.DestinationComparision.MonthToCompare.MonthId">@Model.DestinationName</a></p></td>
            <td><p><a href="../Trips/Create/?DestinationId=@Model.DestinationComparision.Destination2.DestinationId&MonthId=@Model.DestinationComparision.MonthToCompare.MonthId">@Model.DestinationComparision.Destination2.DestinationName</a></p></td>
        </tr>
        @foreach (var item in Model.DestinationComparision.CompareChart.CompareChartRows)
        {
            <tr>
                <td>
                    <p>@item.Species.SpeciesName</p>
                </td>
                @for (int i = 0; i < 2; i++)
                {

                    <td>
                        <p>@item.SpeciesRatings[i]</p>
                    </td>
                }
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DestinationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
