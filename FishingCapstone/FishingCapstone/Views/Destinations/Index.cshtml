@model IEnumerable<FishingCapstone.Models.Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

<h1>Destinations</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DestinationName)
            </th scope="col">
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Calendar" asp-route-id="@item.DestinationId">@Html.DisplayFor(modelItem => item.DestinationName)</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DestinationId">Details</a> |
                    <a asp-action="Calendar" asp-route-id="@item.DestinationId">Calendar</a> |
                    <a asp-action="SelectCompare" asp-route-id="@item.DestinationId">Compare</a>
                </td>
            </tr>
        }
    </tbody>
</table>
