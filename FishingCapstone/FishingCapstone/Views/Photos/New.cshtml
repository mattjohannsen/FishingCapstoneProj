@model FishingCapstone.ViewModels.PhotosViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Add New </h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="New">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhotoFile" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="PhotoFile" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="PhotoFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhotoCaption" class="control-label"></label>
                        <input asp-for="PhotoCaption" class="form-control" />
                        <span asp-validation-for="PhotoCaption" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhotoTripId" class="control-label"></label>
                        <select asp-for="PhotoTripId" class="form-control" asp-items="ViewBag.PhotoTripId"></select>
                    </div>
                </div>
                @*<div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-sm btn-primary rounded-0 text-uppercase" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}

