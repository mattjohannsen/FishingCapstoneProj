@model FishingCapstone.Models.Photos

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout-Explorer.cshtml";
}

<h1>Edit</h1>

<h4>Photos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhotosId" />
            @Html.HiddenFor(model => model.PhotoFile)
            <div class="form-group">
                <label asp-for="PhotoTripId" class="control-label"></label>
                <select asp-for="PhotoTripId" class="form-control" asp-items="ViewBag.PhotoTripId"></select>
                <span asp-validation-for="PhotoTripId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoCaption" class="control-label"></label>
                <input asp-for="PhotoCaption" class="form-control" />
                <span asp-validation-for="PhotoCaption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoLat" class="control-label"></label>
                <input asp-for="PhotoLat" class="form-control" />
                <span asp-validation-for="PhotoLat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoLong" class="control-label"></label>
                <input asp-for="PhotoLong" class="form-control" />
                <span asp-validation-for="PhotoLong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoDate" class="control-label"></label>
                <input asp-for="PhotoDate" class="form-control" />
                <span asp-validation-for="PhotoDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
